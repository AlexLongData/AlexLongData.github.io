{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"title": {
		"text": "New Coronavirus Cases",
		"subtitle":"New Coronavirus Cases per Region of England",
		"subtitleFontStyle":"italic",
		"subtitleFontSize":10,
		"anchor": "start",
		"color": "black"
	},
	"data": {
		"url": "https://api.coronavirus.data.gov.uk/v2/data?areaType=region&metric=newCasesBySpecimenDate&format=csv",
		"format": {
			"type": "csv"
		}
	},
	"transform": [
		{
			"filter": {
				"field": "areaName",
				"oneOf": ["North East", "South East", "East of England"]
			}
		},
		{
			"filter": "datum.date > now() - (datetime(0, 4) - datetime(0, 0))"
		}
	],
	"height": 300,
	"width": 300,
	"autosize": "fit",
	"mark": {
		"type": "line",
		"point": false
	},
	"encoding": {
		"x": {
			"field": "date",
			"type": "temporal",
			"title": null,
			"axis": {
				"grid": false
			}
		},
		"y": {
			"field": "newCasesBySpecimenDate",
			"type": "quantitative",
			"title": "New Cases",
			"axis": {
				"grid": false
			}
		},
		"color": {
			"field": "areaName",
			"type": "nominal",
			"scale": {"scheme": "set2"},
			"title": "Region",
			"legend": {
				"orient": "top-right",
				"fillColor": "#fcfdfd00"
			}
		}
	}
}