{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Average House Prices",
      "subtitle": "Average House Price each Year, Source: UK Gov",
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "black"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/AlexLongData/AlexLongData.github.io/main/data/Average-prices-2021-10.csv"
    },
    "width": 300,
    "height": 300,
    "autosize": "fit",
    "mark": {
      "type": "line",
      "point": false,
      "color": "#F0B522"
    },
    "transform": [
      {"calculate": "timeParse(datum.Date, '%d/%m/%Y')", "as": "date"},
      {"calculate": "year(datum.date)", "as": "year"},
      {"filter": "datum.year>=minYear"},
      {"filter": "datum.year<=maxYear"}
    ],
    "params": [
      {
        "name": "minYear",
        "value": 1995,
        "bind": {
          "input": "range",
          "min": 1995,
          "max": 2021,
          "step": 1,
          "name": "Start year:"
        }
      },
      {
        "name": "maxYear",
        "value": 2021,
        "bind": {
          "input": "range",
          "min": 1995,
          "max": 2021,
          "step": 1,
          "name": "End year:"
        }
      }
    ],
    "encoding": {
      "x": {
        "field": "date",
        "type": "temporal",
        "axis": {
          "title": null,
          "grid": false
        }
      },
      "y": {
        "field": "Average_Price",
        "type": "quantitative",
        "title": "Average Price (Â£)",
        "axis": {
          "grid": false
        }
      },
      "tooltip": [
        {
            "field": "date",
            "title": "Date",
            "type": "temporal"
        },
        {
            "field": "Average_Price",
            "title": "Average House Price"
        }
      ]
    }
  }